<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Node | User App - Home</title>

  <link rel="shortcut icon" href="/img/user.svg" type="image/x-icon">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="container">
    <nav class="top-nav">
      {{>topnav}}
    </nav>

    <section class="main-content">
      <div class="row">
        <div class="col-sm">
          <header>
            <h1>Users</h1>
          </header>

          <div class="home-content">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Company</th>
                  <th>Website</th>
                  <th>Details</th>
                </tr>
              </thead>

              <tbody>
                {{#if users}}
                {{#each users}}
                <tr>
                  <td>{{{name}}}</td>
                  <td>{{{company.name}}}</td>
                  <td><a href="javascript:void(0);">{{{website}}}</a></td>
                  <td>
                    <a href="javascript:void(0);" class="view-user-details" data-bs-toggle="modal"
                      data-bs-target="#userDetailsModal_{{{@index}}}">
                      View
                    </a>
                    <div class="modal fade" id="userDetailsModal_{{{@index}}}" tabindex="-1"
                      aria-labelledby="userDetailsModalLabel_{{{@index}}}" aria-hidden="true">
                      <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="userDetailsModalLabel_{{{@index}}}">
                              {{{company.name}}}
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <div class="row row-user-details">
                              <div class="col-3 label">Name</div>
                              <div class="col-9 value">{{{name}}}</div>
                            </div>

                            <div class="row row-user-details">
                              <div class="col-3 label">Email</div>
                              <div class="col-9 value"><a href="javascript:void(0);">{{{email}}}</a></div>
                            </div>
                            
                            <div class="row row-user-details">
                              <div class="col-3 label">Phone</div>
                              <div class="col-9 value">{{{phone}}}</div>
                            </div>
                            
                            <div class="row row-user-details">
                              <div class="col-3 label">Address</div>
                              <div class="col-9 value">
                                {{#with address}}
                                <div>{{{suite}}}</div>
                                <div>{{{street}}}</div>
                                <div>{{{city}}} {{{zipcode}}}</div>
                                {{/with}}
                              </div>
                            </div>
                            
                            <div class="row row-user-details">
                              <div class="col-3 label">Website</div>
                              <div class="col-9 value"><a href="javascript:void(0);">{{{website}}}</a></div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
                {{/each}}
                {{else}}
                <tr>
                  <td colspan="4">
                    No users found!
                  </td>
                </tr>
                {{/if}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      {{>footer}}
    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js"
    crossorigin="anonymous"></script>
</body>

</html>